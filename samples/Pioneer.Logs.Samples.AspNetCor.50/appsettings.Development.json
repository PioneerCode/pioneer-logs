{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "PioneerLogsConfiguration": {
    "ApplicationName": "Pioneer Logs",
    "ApplicationLayer": "Pioneer.Logs.Samples.AspNetCore",
    "MapToEcs": true,
    "Errors": {
      "WriteToFile": true,
      "WriteToConsole": true
    },
    "Usage": {
      "WriteToFile": false,
      "WriteToConsole": true
    },
    "Performance": {
      "WriteToFile": false,
      "WriteToConsole": true
    },
    "Diagnostics": {
      "WriteToFile": true,
      "WriteToConsole": true
    }
  }
}
